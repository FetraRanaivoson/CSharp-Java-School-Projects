<Window x:Class="EventsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventsDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <ProgressBar x:Name="AltitudeProgressBar"
                     MinWidth="400" MinHeight="15"/>
        <Separator Width="10" Height="10" Opacity="0"/>
        <Button x:Name="RandomizeAltitudeButton"
                Content="Randomize altitude"
                HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
